<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/blackblue_bg">

    <!-- Start Hour -->
    <EditText
        android:id="@+id/edt_start_hour"
        android:background="#0c1045"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginTop="228dp"
        android:hint="Start Hour (0-23)"
        android:textColorHint="#FFFFFF"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Start Minute -->
    <EditText
        android:id="@+id/edt_start_minute"
        android:layout_width="0dp"
        android:background="#443999"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:textColor="@color/white"
        android:hint="Start Minute (0-59)"
        android:textColorHint="#FFFFFF"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_start_hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- End Hour -->
    <EditText
        android:id="@+id/edt_end_hour"
        android:layout_width="0dp"
        android:background="#0c1045"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:hint="End Hour (0-23)"
        android:textColorHint="#FFFFFF"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_start_minute"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- End Minute -->
    <EditText
        android:id="@+id/edt_end_minute"
        android:layout_width="0dp"
        android:background="#443999"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:hint="End Minute (0-59)"
        android:textColorHint="#FFFFFF"
        android:inputType="number"
        android:minHeight="48dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/edt_end_hour"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="0dp"
        android:background="#0c1045"
    android:layout_height="wrap_content"
    android:text="Submit"
    android:padding="12dp"
    android:textColor="#FFFFFF"
    android:textSize="16sp"
    android:layout_marginTop="32dp"
    app:layout_constraintTop_toBottomOf="@id/edt_end_minute"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
